---
import { getImage } from "astro:assets";

interface Props {
    image_url: string;
}

const { image_url } = Astro.props;
const prefix = import.meta.env.MEDIAPATH || '/media/';
const optImage = await getImage({src: prefix + image_url, format: "jpeg", inferSize: true});
---
<>
    <meta property="og:image:url" content={optImage.src} />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:image:width" content={optImage.attributes.width} />
    <meta property="og:image:height" content={optImage.attributes.height} />
</>